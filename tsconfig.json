{
    "compilerOptions": {
      "module": "commonjs",
      "lib": [
        "es6"
      ],
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "outDir": "./dist",
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "exclude": [
        "node_modules"
      ],
      "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts", "src/entities/entities"
      ]
  }